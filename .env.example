# Basic configuration
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
LOG_LEVEL=DEBUG

DATABASE_NAME=secretariat
DATA_DIR=.  # Directory for storing database and persistent data. Use /app/data for Docker volumes

# LLM Provider Configuration
LLM_PROVIDER=openrouter  # Options: "openrouter" or "zen"

# OpenRouter Configuration (when LLM_PROVIDER=openrouter)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=moonshotai/kimi-k2-0905

# OpenCode Zen Configuration (when LLM_PROVIDER=zen)
ZEN_API_KEY=your-zen-api-key
ZEN_MODEL=claude-sonnet-4  # Examples: claude-sonnet-4, gpt-5, qwen3-coder

BROWSER_USE_MODEL=openai/o3

TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-ngrok-url.ngrok-free.app
TELEGRAM_ALLOWED_USERS=123456789

QDRANT_HOST=https://<UUID>.<region>.aws.cloud.qdrant.io:6333
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key

# SSL verification
VERIFY_SSL=True
